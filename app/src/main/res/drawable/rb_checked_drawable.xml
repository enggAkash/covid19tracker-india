<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/margin_smallest" />
            <solid android:color="@color/light_green" />
            <size
                android:width="@dimen/margin_medium"
                android:height="@dimen/margin_medium" />
        </shape>
    </item>
    <item
        android:width="@dimen/margin_medium_minus"
        android:height="@dimen/margin_medium_minus"
        android:bottom="@dimen/margin_smallest"
        android:left="@dimen/margin_smallest"
        android:right="@dimen/margin_smallest"
        android:top="@dimen/margin_smallest">

        <bitmap
            android:gravity="center"
            android:src="@drawable/tick_green" />
    </item>


</layer-list>