<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.track.TotalAndDailyGraphFragment">

    <!--Daily Confirmed Cases in India Timeline-->
    <LinearLayout
        android:id="@+id/dailyConfirmedCasesTimelineContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dailyConfirmedCasesTimelineTitleTv"
            style="@style/HeadingTextSmallSizeSemiBoldFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/heading_text_color"
            android:textSize="13sp"
            tools:text="#Daily Confirmed Cases in India Timeline" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/dailyConfirmedCasesTimelineChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginStart="@dimen/main_activity_margin_start"
            android:layout_marginEnd="@dimen/main_activity_margin_end"
            android:layout_marginBottom="@dimen/main_activity_margin_bottom"
            android:padding="5dp" />

        <TextView
            android:id="@+id/dailyConfirmedCasesTimelineChartMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="@dimen/main_activity_margin_bottom"
            android:foreground="?android:selectableItemBackground"
            android:padding="@dimen/margin_smallest"
            android:text="More"
            android:textColor="@android:color/holo_blue_dark" />

    </LinearLayout>

